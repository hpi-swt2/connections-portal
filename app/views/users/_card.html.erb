<%= stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class=contact-card>
  <div class="contact">
  <label class="contact-link">
    <%= link_to "", user_path(user) %>
    <div class="profile-image my-2 my-sm-0 ">
      <%= image_tag user.avatar, class: "rounded-circle cover" %>
    </div>
    <div class="user-info my-2 my-sm-0">
      <h5><%= "#{user.firstname} #{user.lastname}"%></h5>
      <div class="email"><%= user.email %></div>
    </div>
  </label>
  <% if mode == :add %>
    <%= link_to (fa_icon 'plus-circle', title: I18n.t('user.contact_request.send')), user_contact_requests_path(user), id: user.id, class: "add_button btn btn-secondary"%>
  <% end %>
  </div>
  <% if mode == :overview %>
    <div class="social-account-info">
      <% user.social_accounts.each do |social_account| %>
        <label class="contact-link">
          <a href=<%= generate_link(social_account) %>>
            <i class="fa <%= generate_icon(social_account) %> fa-2x" aria-hidden="true"></i>
          </a>
        </label>
      <% end %>
    </div>
  <% end %>
</div>
