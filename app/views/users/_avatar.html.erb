<% if user.avatar.attached? %>
  <%= image_tag user.avatar, height: size, width: size, style: style, class: "rounded-circle" %>
<% else %>
  <img class="rounded-circle" height="<%= size %>" width="<%= size %>" style="<%= style %>"
       src="https://user-images.githubusercontent.com/48409110/107123576-8aef6b80-689e-11eb-9386-16eecd0ceb9e.png">
<% end %>