<h1>Edit profile</h1>
<hr />
<h2>Profile</h2>
<%= form_with(model: @user, local: true) do |form| %>
  <p>
    <%= form.label I18n.t('user.attributes.username') %>
    <%= form.text_field :username %>
  </p>

  <p>
    <%= form.label I18n.t('user.attributes.firstname') %>
    <%= form.text_field :firstname %>
  </p>

  <p>
    <%= form.label I18n.t('user.attributes.lastname') %>
    <%= form.text_field :lastname %>
  </p>

  <p>
    <%= form.label I18n.t('user.attributes.place_of_residence') %>
    <%= form.text_field :place_of_residence %>
  </p>

  <p>
    <%= form.label I18n.t('user.attributes.birthdate') %>
    <%= form.date_select :birthdate, start_year: 1900, end_year: Time.now.year %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<hr />
<% if @user.social_accounts.any? %>
  <h2> Social Accounts </h2>
  <table>
    <% @user.social_accounts.each do |social_account| %>
      <tr>
        <%= render 'social_accounts/social_account_setting', user: @user, social_account: social_account %>
      </tr>
    <% end %>
  </table>

<% end %>
<h3>Add a Social Account</h3>
<%= render 'social_accounts/form', social_account: @user.social_accounts.build %>
